---
const {frontmatter} = Astro.props;
---
<style is:global>
@tailwind base;

.blog {
  @apply max-w-4xl mx-auto px-4 py-8 bg-white;
  a {
    @apply text-blue-600 underline;
  }
  p {
    @apply text-gray-700 my-6 leading-7 text-justify;
  }
  h1 {
    @apply text-4xl font-semibold text-gray-900 mb-4 my-2;
  }
  h2 {
    @apply text-3xl font-medium text-gray-800 mb-3 my-4;
  }
  h3 {
    @apply text-2xl font-medium text-gray-700 mb-2;
  }
  h4 {
    @apply text-xl font-medium text-gray-600 mb-2;
  }
  img {
    @apply rounded w-full h-auto mb-4;
  }
  blockquote {
    @apply border-l-4 border-gray-400 pl-4 italic text-gray-600;
  }
  pre {
    @apply bg-gray-800 text-white p-4 rounded overflow-x-auto;
  }
  code {
    @apply font-mono text-sm;
  }
}

@tailwind components;
@tailwind utilities;
</style>
<html lang='end'>
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{frontmatter.title}</title>
</head>
<script>
  var _paq = window._paq = window._paq || [];
/* tracker methods like "setCustomDimension" should be called before "trackPageView" */
_paq.push(['trackPageView']);
_paq.push(['enableLinkTracking']);
(function() {
  var u="https://danielalvesworld.matomo.cloud/";
  _paq.push(['setTrackerUrl', u+'matomo.php']);
  _paq.push(['setSiteId', '4']);
  var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
  g.async=true; g.src='//cdn.matomo.cloud/danielalvesworld.matomo.cloud/matomo.js'; s.parentNode.insertBefore(g,s);
})();
</script>
<body>
  <header>
  <!--   <h1 class="text-3xl text-blue-800"> -->
  <!--     Blog | AI and Robotics Club<span class="text-lg text-gray-900">{frontmatter.title}</span> -->
  <!--   </h1> -->
  </header>

  <h1 class="text-4xl text-blue-800 text-center my-8">
    {frontmatter.title}
  </h1>
  <main class="blog mt-8">
    <slot />
  </main>
  <footer class="text-center text-gray-500 text-sm my-4">
    <p>2023 AI and Robotics Club</p>
  </footer>
</body>
</html>
