---
interface Props {
    width: number;
}
const { width, } = Astro.props;
---
<div id="NavBarWidthPass" style="display: none;">{width}</div>


<div>
    <div id="burgerToggleContainer">
        <button class="toggle"><img id = "burgerIcon" src="../../public/burger.png" alt="burger"></button>
    </div>
    <div>
        <ul id = "navBarUL" class="navBar" style="display: none">
            <li><a href="">Home</a></li>
            <li><a href="../blog">Blog</a></li>
            <hr style="border: 1px solid darkgray; margin-top:10px; margin-bottom: 10px;">
            <li><a href="https://ie-robotics-club.notion.site/Wiki-a62b9ea0e0a14243b731c45a5f98be61" target="_blank">Notion</a></li>
            <li><a href="https://ieconnects.ie.edu/feeds?type=club&type_id=300003041&tab=home" target="_blank">IE connects</a></li>
            <li><a href="https://linktr.ee/ieroboticsclub" target="_blank">Socials</a></li>
            <hr style="border: 1px solid darkgray; margin-top:10px; margin-bottom: 10px;">
            <li><a href="https://ieconnects.ie.edu/ieroboticsai/club_signup" target="_blank"><u>Join here!</u></a></li>
        </ul>
    </div>
</div>
<script>
    const width = document.getElementById("NavBarWidthPass").innerHTML;
    const navElement = document.getElementById("navBarUL");
    navElement.style.width = width + "%"
    const mainElement = document.getElementById("main-body");

    function burgerToggle() {
        if (navElement.style.display === "none") {
            navElement.style.display = "block"
            mainElement.style.marginLeft = width + "%";
        } else {
            navElement.style.display = "none";
            mainElement.style.marginLeft = 0 + "px";
        }
    }

    const buttons = document.querySelectorAll('button.toggle');
    buttons.forEach((button) => {
        button.addEventListener('click', () => {
            burgerToggle();
        });
    });
</script>
<style>
    #burgerIcon{
        width: 40px;
        padding: 10px;
    }
    #burgerToggleContainer{
        position: fixed;
        z-index:11;
    }
    ul {
        list-style-type: decimal;
        margin: 0;
        padding-top: 70px;
        background-color: #d5d5d5;
        position: fixed;
        height: 100%;
        overflow: auto;
        z-index: 10;
    }

    li a {
        display: block;
        color: #000;
        padding: 8px 16px;
        text-decoration: none;
    }

    li a.active {
        background-color: #04AA6D;
        color: white;
    }

    li a:hover:not(.active) {
        background-color: #555;
        color: white;
    }
</style>