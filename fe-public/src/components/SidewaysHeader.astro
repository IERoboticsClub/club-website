---
interface Props {
    title: string;
}

const { title, } = Astro.props;
---
<p id="h" class="">{title}</p>
<style>
    #h {
        position: absolute;
        font-size: 30px;
        transform: rotate(-90deg);
        top: 40%;
        left: 150px;
    }

    /* Reset rotation on mobile screens */
    @media (max-width: 768px) {
        #h {
            transform: rotate(0deg);
            top: 0;
            left: 0;
            position: relative;
        }
    }

    /* TODO: make it more centered and add some vertical margins */
</style>
